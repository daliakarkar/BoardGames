<Window x:Class="Data_structure_XO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Board Games"
        Style="{StaticResource {x:Type Window}}" 
        WindowStartupLocation = "CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
        <Button Content="Load Game" Click="load_game_Click" Height="45"/>
        <Button Content="New Game"  Click="new_game_Click" Height="45"/>
    </StackPanel>
</Window>
